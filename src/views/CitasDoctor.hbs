         {{else}}
        {{#if Rechazo}}
            <h4 class="card-title">CITA RECHAZADA</h4>
         {{else}}
            <a href="/Doctor/Citas/ConfirmarC/{{_id}}" class="btn btn-success btn-block">Confirmar Cita</a><br>
            <a href="/Doctor/Citas/RechazarC/{{_id}}" class="btn btn-dark btn-block">Rechazar Cita</a><br>
         {{/if}}
         {{/if}}


            
       <form action="/Doctor/Citas/EliminarC/{{_id}}?_method=DELETE" method="POST">
           <input type="hidden" name="_method" value="DELETE">
           <button type="submit" class="btn btn-danger btn-block">Eliminar Cita</button>
       </form>     
    </div>
  </div>
  </div>
  {{else}}
  <div class="card mx-auto">
    <div class="card-body text-center">
      <h1>Hola {{user.Usuario}}</h1>
      <p clsss="lead">Tus pacientes aun no han agendado citas</p>
    </div>
  </div>
  {{/each}}
