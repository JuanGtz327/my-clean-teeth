<div class="row">
  {{#each Pacientes}}
  <div class="col-md-4">
  <div class="card text-center"  >
    {{#if Sexo}}
      <img class="card-img-top" src="/img/img_avatar5.png" alt="Card image" style="width:100%">
    {{else}}
      <img class="card-img-top" src="/img/img_avatar1.png" alt="Card image" style="width:100%">
    {{/if}}
    <div class="card-body">
      <h4 class="card-title">{{Nombre}}&nbsp;{{Apellido}}</h4>
        <h6 class="card-title">Nombre de Usuario: {{Usuario}}</h6>
      <p class="card-text">{{Descripcion}}</p>
      <a href="/Doctor/Pacientes/DientesP/{{_id}}" class="btn btn-info btn-block">Editar Estado Dientes</a><br>
      <a href="/Doctor/Pacientes/EditarP/{{_id}}" class="btn btn-warning btn-block">Editar Paciente</a><br>
       <form action="/Doctor/Pacientes/EliminarP/{{_id}}?_method=DELETE" method="POST">
           <input type="hidden" name="_method" value="DELETE">
           <button type="submit" class="btn btn-danger btn-block">Eliminar Paciente</button>
       </form>     
    </div>
  </div>
      <br>
  </div>
    
  {{else}}
  <div class="card mx-auto">
    <div class="card-body text-center">
      <h1>Hola {{user.Usuario}}</h1>
      <p clsss="lead">Aun no has dado pacientes de alta</p>
      <a href="/Doctor/Pacientes/NuevoP" class="btn btn-success btn-block">Nuevo Paciente</a>
    </div>
  </div>
  {{/each}}

    </div>
