           <button type="submit" class="btn btn-danger btn-block">Eliminar Cita</button>
       </form>
        {{/if}}
                 {{/if}}
     
    </div>
  </div>
      <br>
  </div>
  {{else}}
  <div class="card mx-auto">
    <div class="card-body text-center">
      <h1>Hola {{user.Usuario}}</h1>
      <p clsss="lead">Aun no has agendado ninguna cita</p>
      <a href="/Paciente/Citas/NuevaC" class="btn btn-success btn-block">Agendar Cita</a>
    </div>
  </div>
  {{/each}}
