  {{#each Citas}}
  <div class="col-md-6">
  <div class="card text-center" style="width:5000px heigth:280px" >
    <div class="card-body">
      <h4 class="card-title">{{Titulo}}</h4>
      <h5 class="card-title">Dia {{Dia}}</h5>
      <h5 class="card-title">Hora {{Hora}}</h5>
      <p class="card-text">{{Descripcion}}</p>
