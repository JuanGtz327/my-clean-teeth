    <div class="card text-center">
        <div class="card-header">
            <h3>
            Registrar Doctor
            </h3>
    </div>
        <div class="card-body text-center">
           <form action="/NewD" method="POST" class="form-group" onpaste="return false" ondrag="return false" ondrop="return false">
               <div class="form-group">
                <input type="text" name="Nombre"  class="form-control" placeholder="Nombre"  required maxlength="20" autocomplete="off" pattern="[A-Za-z ]+" value="{{Nombre}}" title="No caracteres especiales ni numeros">
               </div>
               <div class="form-group">
                <input type="text" name="Apellido"  class="form-control" placeholder="Apellido" required maxlength="20" autocomplete="off" pattern="[A-Za-z ]+" value="{{Apellido}}" title="No caracteres especiales ni numeros">
               </div> 
               <div class="form-group">
              <label for="exampleSelect1">Seleccione el sexo</label>
              <select name="Sexo" class="form-control">
                <option>Masculino</option>
                <option>Femenino</option>                
              </select>
               </div>
               <div class="form-group">
                <input type="text" name="Cedula"  class="form-control" placeholder="Cedula" required maxlength="20" autocomplete="off" pattern="[0-9]+" value="{{Cedula}}" title="No caracteres especiales"> 
               </div>
               <div class="form-group">
                <input type="email" name="Correo"  class="form-control" placeholder="Correo" required maxlength="50" autocomplete="off" value="{{Correo}}">
               </div>
               <div class="form-group">
                <input type="text" name="Usuario"  class="form-control" placeholder="Usuario" required maxlength="20" autocomplete="off" pattern="[A-Za-z ]+" value="{{Usuario}}" title="No caracteres especiales ni numeros">
               </div>
               <div class="form-group">
                <input type="password" name="Contraseña"  class="form-control" placeholder="Contraseña" required maxlength="20" autocomplete="off" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" value="{{Contraseña}}" 
                title = "Debe contener al menos un número, una letra mayúscula, una minúscula, y al menos 8 o más caracteres">
               </div>
               <div class="form-group">
                <input type="password" name="CContraseña"  class="form-control" placeholder="Confirmar Contraseña" required maxlength="20" autocomplete="off" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" value="{{CContraseña}}" 
                title = "Debe contener al menos un número, una letra mayúscula, una minúscula, y al menos 8 o más caracteres">
               </div>
               <div class="form-group">
                   <button type="submit" class="btn btn-primary btn-block"  value="Registrarme" >Registra</button>
               </div>
            </form>
        </div>
    </div>
