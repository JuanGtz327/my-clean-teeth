{{>navpaciente}}
<body>
  <br><br><br><br>
    <div class="container">
        {{> messages }} 
        {{> error}}    
        {{> errors}}
        {{#each Doctor}}
        <div class="col-md-7 mx-auto">
            <div class="card mb-3">
                {{#if Sexo}}
                    <img class="card-img-top" src="/img/img_avatar5.png" alt="Card image cap">
                {{else}}
                    <img class="card-img-top" src="/img/img_avatar1.png" alt="Card image cap">
                {{/if}}
              <div class="card-body">
                {{#if Sexo}}
                    <h3 class="card-title text-center">Doctora {{Nombre}} {{Apellido}}</h3>
                {{else}}
                    <h3 class="card-title text-center">Doctor {{Nombre}} {{Apellido}}</h3>
                {{/if}}
                <p class="card-text">Correo: {{Correo}}</p>
                <p class="card-text">Telefono: {{Telefono}}</p>
                <p class="card-text">Consultorio: {{Consultorio}}</p>
              </div>
              <div class="card-footer text-center">
                  <a class="btn btn-outline-info btn-lg" href="/Paciente/Notas/NuevaN">Dejar Nota</a>
                  <a class="btn btn-outline-secondary btn-lg" href="/Paciente/Citas/NuevaC">Agendar Cita</a>
              </div>
            </div>
        </div>
        {{/each}}
    </div>
